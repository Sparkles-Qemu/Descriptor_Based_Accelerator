{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "release",
            "type": "shell",
            "command": "cd ./src/ && make release",
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "debug",
            "type": "shell",
            "command": "cd ./src/ && make debug",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}